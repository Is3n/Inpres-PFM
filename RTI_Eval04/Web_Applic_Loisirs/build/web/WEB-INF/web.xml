<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CheckLogin</servlet-name>
        <servlet-class>Servlets.CheckLogin</servlet-class>
        <init-param>
            <param-name>TypeSGBD</param-name>
            <param-value>MySQL</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Servlets.Logout</servlet-class>
        <init-param>
            <param-name>TypeSGBD</param-name>
            <param-value>MySql</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>NewPassword</servlet-name>
        <servlet-class>Servlets.NewPassword</servlet-class>
        <init-param>
            <param-name>TypeSGBD</param-name>
            <param-value>MySQL</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AjoutPanier</servlet-name>
        <servlet-class>Servlets.AjoutPanier</servlet-class>
        <init-param>
            <param-name>TypeSGBD</param-name>
            <param-value>MySQL</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>RemovePanier</servlet-name>
        <servlet-class>Servlets.RemovePanier</servlet-class>
        <init-param>
            <param-name>TypeSGBD</param-name>
            <param-value>MySQL</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ValiderPaiement</servlet-name>
        <servlet-class>Servlets.ValiderPaiement</servlet-class>
        <init-param>
            <param-name>TypeSGBD</param-name>
            <param-value>MySQL</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckLogin</servlet-name>
        <url-pattern>/CheckLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPassword</servlet-name>
        <url-pattern>/NewPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutPanier</servlet-name>
        <url-pattern>/AjoutPanier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemovePanier</servlet-name>
        <url-pattern>/RemovePanier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValiderPaiement</servlet-name>
        <url-pattern>/ValiderPaiement</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
